<a href="/post/create" class="btn btn-default">Create a post</a>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><a href="/post/edit/<%= post.id %>"><%= post.title %></a></td>
    </tr>
    <% end %>
  </tbody>
</table>