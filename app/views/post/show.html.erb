<% title @post.title+' : ' +t('blog.title')+' : '+t('default_title') %>
<% description @post.summary %>
<% image @post.thumbnail.nil?? 'blog.jpg': '/posts/' + @post.id.to_s + '/thumbnail/' + @post.thumbnail %>

<div class="post-wrapper">
	<div class="post-read">
		<div class="post-detail">
			<h2><%= @post.title %></h2>
			<span class="post-date"><%= @post.created_at.strftime("%F") %></span>
		</div>
		<% if !@post.thumbnail.nil? %>
		<div class="post-thumbnail">
			<%= image_tag(@post.thumbnail) %>
		</div>
		<% end %>
		<div class="post-content">
			<%= simple_format(@post.content) %>
		</div>
	</div>
</div>